global_defs {
  notification_email {
  }
  router_id LVS_DEVEL
  vrrp_skip_check_adv_addr
  vrrp_garp_interval 0
  vrrp_gna_interval 0
}

vrrp_script chk_haproxy {
  script "/usr/local/bin/check_haproxy.sh"
  interval 2
  weight 2
}

vrrp_instance VI_1 {
    state MASTER
    interface eth0
    virtual_router_id 51
    priority 100
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass 11111
    }
    unicast_src_ip 172.16.1.91
    unicast_peer {
        172.16.1.92
        172.16.1.93
    }
    virtual_ipaddress {
        172.16.1.98
    }
    track_script {
        chk_haproxy
    }
